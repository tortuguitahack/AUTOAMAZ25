{
  "name": "flujo-ventas-afiliados-multicanal",
  "nodes": [
    {
      "parameters": {},
      "id": "1",
      "name": "Inicio Manual",
      "type": "n8n-nodes-base.manualTrigger",
      "typeVersion": 1,
      "position": [0, 0]
    },
    {
      "parameters": {
        "authentication": "oAuth2",
        "sheetId": "1VTZ3HNNndZgl7SKuZmgV6iHCDatjSdHNTzXFClgZKQ4",
        "range": "Productos!A1:G",
        "options": {
          "valueRenderMode": "UNFORMATTED_VALUE"
        }
      },
      "id": "2",
      "name": "Leer Google Sheets",
      "type": "n8n-nodes-base.googleSheets",
      "typeVersion": 4,
      "position": [200, 0],
      "credentials": {
        "googleSheetsOAuth2Api": {
          "id": "tu_credencial_google",
          "name": "Google API"
        }
      }
    },
    {
      "parameters": {
        "functionCode": "return items.map(item => {\n  return {\n    json: {\n      producto: item.json.Producto || '',\n      pais: item.json.Pais || '',\n      url_afiliado: item.json.UrlAfiliado || '',\n      // Puedes agregar m√°s campos si tu hoja los tiene\n    }\n  }\n});"
      },
      "id": "3a",
      "name": "Preparar Datos",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [350, 0]
    },
    {
      "parameters": {
        "model": { "value": "gpt-4" },
        "text": "={{\n  'Eres un experto en ventas por redes sociales. Analiza este producto: ' + $json.producto + ' para el pa√≠s ' + $json.pais + '. '\n  + 'Genera el siguiente contenido en formato JSON (usa solo claves en min√∫sculas):\\n'\n  + '{\\n \"instagram\": \"(copy para post de instagram)\",\\n \"twitter\": \"(copy para tweet)\",\\n \"reel\": \"(guion para reel)\",\\n \"image_prompt\": \"(prompt para IA de imagen llamativo y descriptivo para ' + $json.producto + ' en ' + $json.pais + ')\"\\n}'\n}}"
      },
      "id": "4",
      "name": "Generar Contenido IA",
      "type": "@n8n/n8n-nodes-langchain.lmChatOpenAi",
      "typeVersion": 1,
      "position": [500, 0],
      "credentials": {
        "openAiApi": {
          "id": "tu_credencial_openai",
          "name": "OpenAI"
        }
      }
    },
    {
      "parameters": {
        "functionCode": "let content;\ntry {\n  content = typeof $json.text === 'string' ? JSON.parse($json.text) : $json.text;\n} catch(e) {\n  content = { instagram: '', twitter: '', reel: '', image_prompt: '' };\n}\nreturn [{ json: { ...$json, ...content } }];"
      },
      "id": "5",
      "name": "Parsear Contenido IA",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [650, 0]
    },
    {
      "parameters": {
        "url": "https://image.pollinations.ai/prompt={{ $json.image_prompt }}",
        "responseFormat": "json"
      },
      "id": "6",
      "name": "Generar Imagen IA",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 2,
      "position": [800, 0]
    },
    {
      "parameters": {
        "functionCode": "return [{\n  json: {\n    ...$json,\n    img_url_generada: $json.url || ($json.body && $json.body.url) || ''\n  }\n}];"
      },
      "id": "7",
      "name": "Obtener URL Imagen",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [950, 0]
    },

    // LOGS
    {
      "parameters": {
        "functionCode": "console.log('LOG:', $json); return items;"
      },
      "id": "log1",
      "name": "Log de Proceso",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [1000, 200]
    },

    // TELEGRAM
    {
      "parameters": {
        "chatId": "@tu_canal",
        "text": "={{ $json.instagram + '\\n' + $json.url_afiliado }}",
        "photo": "={{ $json.img_url_generada }}"
      },
      "id": "8",
      "name": "Publicar en Telegram",
      "type": "n8n-nodes-base.telegram",
      "typeVersion": 1,
      "position": [1150, 0],
      "credentials": {
        "telegramApi": {
          "id": "tu_credencial_telegram",
          "name": "Telegram Bot"
        }
      }
    },

    // TWITTER
    {
      "parameters": {
        "status": "={{ $json.twitter + '\\n' + $json.url_afiliado }}",
        "media": "={{ $json.img_url_generada }}"
      },
      "id": "9",
      "name": "Publicar en Twitter",
      "type": "n8n-nodes-base.twitter",
      "typeVersion": 1,
      "position": [1150, 150],
      "credentials": {
        "twitterOAuth1Api": {
          "id": "tu_credencial_twitter",
          "name": "Twitter API"
        }
      }
    },

    // WHATSAPP (ejemplo para WhatsApp Cloud API)
    {
      "parameters": {
        "authentication": "oAuth2",
        "resource": "message",
        "operation": "send",
        "to": "51999999999", // n√∫mero destino
        "type": "image",
        "imageUrl": "={{ $json.img_url_generada }}",
        "caption": "={{ $json.instagram + '\\n' + $json.url_afiliado }}"
      },
      "id": "10",
      "name": "Enviar WhatsApp",
      "type": "n8n-nodes-base.whatsappCloudApi",
      "typeVersion": 1,
      "position": [1150, 300],
      "credentials": {
        "whatsappCloudApi": {
          "id": "tu_credencial_whatsapp",
          "name": "WhatsApp Cloud API"
        }
      }
    },

    // EMAIL
    {
      "parameters": {
        "fromEmail": "ventas@tuempresa.com",
        "toEmail": "destino@dominio.com",
        "subject": "Nueva campa√±a afiliados: {{ $json.producto }}",
        "text": "={{ $json.instagram + '\\n' + $json.url_afiliado + '\\n' + $json.img_url_generada }}"
      },
      "id": "11",
      "name": "Enviar Email",
      "type": "n8n-nodes-base.emailSend",
      "typeVersion": 1,
      "position": [1150, 450],
      "credentials": {
        "smtp": {
          "id": "tu_smtp",
          "name": "SMTP"
        }
      }
    },

    // NOTION
    {
      "parameters": {
        "resource": "page",
        "operation": "create",
        "databaseId": "tu_notion_db",
        "properties": {
          "Name": "={{ $json.producto }}",
          "Canal": "Multi",
          "Pa√≠s": "={{ $json.pais }}",
          "URL Afiliado": "={{ $json.url_afiliado }}",
          "Instagram": "={{ $json.instagram }}",
          "Twitter": "={{ $json.twitter }}",
          "Imagen": "={{ $json.img_url_generada }}"
        }
      },
      "id": "12",
      "name": "Registrar en Notion",
      "type": "n8n-nodes-base.notion",
      "typeVersion": 1,
      "position": [1300, 0],
      "credentials": {
        "notionApi": {
          "id": "tu_notion_api",
          "name": "Notion API"
        }
      }
    },

    // SLACK ALERTA
    {
      "parameters": {
        "channel": "#ventas-alertas",
        "text": "üö® Sin ventas tras 2h del producto {{ $json.producto }} en {{ $json.pais }}. Revisa el post."
      },
      "id": "13",
      "name": "Alerta Slack",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 1,
      "position": [1700, 0],
      "credentials": {
        "slackApi": {
          "id": "tu_credencial_slack",
          "name": "Slack API"
        }
      }
    }
  ],
  "connections": {
